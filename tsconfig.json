{
  "compilerOptions": {
    "target": "es2018",
    "module": "ES6",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "ts-node": {
    "esModuleInterop": true
  }
}
